<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/symbol_name"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/stock_margin_8dp"
        android:layout_marginStart="@dimen/stock_margin_8dp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/stock__text_size_14sp"
        tools:text="IRFC"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/symbol_qty"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/symbol_name"
        android:textColor="@android:color/black"
        android:layout_marginTop="@dimen/stock_margin_8dp"
        android:layout_marginStart="@dimen/stock_margin_8dp"
        android:textSize="@dimen/stock__text_size_14sp"
        tools:text="575"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ltp_text"
        android:textStyle="normal"
        app:layout_constraintEnd_toStartOf="@id/ltp_amt"
        app:layout_constraintTop_toTopOf="@id/ltp_amt"
        android:text="@string/ltp_text"
        android:textColor="@android:color/black"
        android:textSize="@dimen/stock__text_size_14sp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ltp_amt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="@dimen/stock_margin_8dp"
        android:layout_marginTop="@dimen/stock_margin_8dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="@dimen/stock__text_size_14sp"
        tools:text="₹ 100.50"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pl_text"
        android:textStyle="normal"
        app:layout_constraintEnd_toStartOf="@id/pl_amt"
        app:layout_constraintTop_toTopOf="@id/symbol_qty"
        android:text="@string/pl_text"
        android:textColor="@android:color/black"
        android:textSize="@dimen/stock__text_size_14sp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pl_amt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/symbol_qty"
        android:layout_marginEnd="@dimen/stock_margin_8dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="@dimen/stock__text_size_14sp"
        tools:text="₹ 100.50"/>




</androidx.constraintlayout.widget.ConstraintLayout>